<% self_ = current_user.is_self(@user) %>
<%= labeled_divider(label = self_ ? 'Your' : @user.display_name.concat("'s")) %>
<div class="container-fluid px-1 p-sm-2 p-md-0 full-height position-absolute">

  <div class="d-md-flex min-ht-100">

    <div class="left-sidebar col-12 col-md-4 col-lg-3 mx-0 mt-1 mt-md-0 px-0 bg-teal">
      <!-- STICKY TOP CONTAINER -->
      <div class="sticky-top pt-2">
          <div class="border-top-0 rounded-0">
            <!-- tab headers -->
            <ul class="nav nav-tabs mb-1 d-block text-white" id="taskTab" role="tablist">

              <!-- REQUESTS ASSIGNED TO USER -->
              <li>
                <div class="col text-center">Your Tasks</div>
              </li>
              <li class="nav-item d-block">
                <a class="nav-link text-light p-1" id="active-assigned-tab" data-toggle="tab" data-target="#activeAssigned" role="tab" aria-controls="activeAssigned" aria-selected="true">
                  <div class="d-flex px-2 px-md-1">
                    <span class="flex-grow-1">ACTIVE</span>
                    <span class="badge badge-pill badge-light">
                      <%= @user.tasks.assigned.active.length %>
                    </span>
                  </div>
                </a>
              </li>
              <li class="nav-item d-block">
                <a class="nav-link text-light p-1" id="completed-assigned-tab" data-toggle="tab" data-target="#completedAssigned" role="tab" aria-controls="completedAssigned" aria-selected="false">
                  <div class="d-flex px-2 px-md-1">
                    <span class="flex-grow-1">COMPLETED</span>
                    <span class="badge badge-pill badge-light">
                      <%= @user.tasks.assigned.completed.length %>
                    </span>
                  </div>
                </a>
              </li>

              <!-- REQUESTS ASSIGNED BY USER -->
              <li>
                <div class="col text-center">Your Requests</div>
              </li>
              <li class="nav-item d-block">
                <a class="nav-link text-light p-1" id="active-requests-tab" data-toggle="tab" data-target="#activeRequests" role="tab" aria-controls="activeRequests" aria-selected="false">
                  <div class="d-flex px-2 px-md-1">
                    <span class="flex-grow-1">ACTIVE</span>
                    <span class="badge badge-pill badge-light">
                      <%= @user.requests.assigned.active.length %>
                    </span>
                  </div>
                </a>
              </li>

              <li class="nav-item d-block">
                <a class="nav-link text-light p-1" id="completed-requests-tab" data-toggle="tab" data-target="#completedRequests" role="tab" aria-controls="completedRequests" aria-selected="false">
                  <div class="d-flex px-2 px-md-1">
                    <span class="flex-grow-1">COMPLETED</span>
                    <span class="badge badge-pill badge-light">
                      <%= @user.requests.assigned.completed.length %>
                    </span>
                  </div>
                </a>
              </li>

              <!-- REQUESTS ASSIGNED TO SELF -->
              <li>
                <div class="col text-center">Your ToDo's</div>
              </li>
              <li class="nav-item d-block">
                <a class="nav-link text-light p-1 active show" id="active-todos-tab" data-toggle="tab" data-target="#activeTodos" role="tab" aria-controls="activeTodos" aria-selected="false">
                  <div class="d-flex px-2 px-md-1">
                    <span class="flex-grow-1">ACTIVE</span>
                    <span class="badge badge-pill badge-light">
                      <%= @user.tasks.my.active.length %>
                    </span>
                  </div>
                </a>
              </li>

              <li class="nav-item d-block">
                <a class="nav-link text-light p-1" id="completed-todos-tab" data-toggle="tab" data-target="#completedTodos" role="tab" aria-controls="completedTodos" aria-selected="false">
                  <div class="d-flex px-2 px-md-1">
                    <span class="flex-grow-1">COMPLETED</span>
                    <span class="badge badge-pill badge-light">
                      <%= @user.tasks.my.completed.length %>
                    </span>
                  </div>
                </a>
              </li>

            </ul>

          </div>

      </div>
    </div>

    <div id="requests-window" class="col-12 col-md-8 col-lg-6 pb-2 px-1 pt-1 px-md-2 pt-md-2 pr-lg-1">
      <div class="col tab-content p-0" id="assignedTabContent">
        <!-- tab content -->

        <!-- REQUESTS ASSIGNED TO USER -->
        <div class="tab-pane fade show active" id="activeAssigned" role="tabpanel">
          <% @user.tasks.assigned.active.each do |request| %>
            <%= render partial: 'requests/request', locals: { request: request, task: true } %>
          <% end %>
          <% unless @user.tasks.assigned.active.any? %>
            <div class="text-dark card-body p-0 mb-2">
              <div class="card col bg-white rounded-0">
                <div class="rounded-0 row p-5">
                  CONGRATULATIONS!<br>No Active requests
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="tab-pane fade" id="completedAssigned" role="tabpanel">
          <% @user.tasks.assigned.completed.each do |request| %>
            <%= render partial: 'requests/request', locals: { request: request, task: true } %>
          <% end %>
          <% unless @user.tasks.assigned.completed.any? %>
            <div class="text-dark card-body p-0 mb-2">
              <div class="card col bg-white rounded-0">
                <div class="rounded-0 row p-5">
                  CONGRATULATIONS!<br>All completed requests removed
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- REQUESTS USER HAS ASSIGNED -->
        <div class="tab-pane fade" id="activeRequests" role="tabpanel">
          <% @user.requests.assigned.active.each do |request| %>
            <%= render partial: 'requests/request', locals: { request: request, task: true } %>
          <% end %>
          <% unless @user.requests.assigned.active.any? %>
            <div class="text-dark card-body p-0 mb-2">
              <div class="card col bg-white rounded-0">
                <div class="rounded-0 row p-5">
                  CONGRATULATIONS!<br>No Active requests
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="tab-pane fade" id="completedRequests" role="tabpanel">
          <% @user.requests.assigned.completed.each do |request| %>
            <%= render partial: 'requests/request', locals: { request: request, task: true } %>
          <% end %>
          <% unless @user.requests.assigned.completed.any? %>
            <div class="text-dark card-body p-0 mb-2">
              <div class="card col bg-white rounded-0">
                <div class="rounded-0 row p-5">
                  CONGRATULATIONS!<br>All completed requests removed
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- PERSONAL USER TODO'S -->
        <div class="tab-pane fade" id="activeTodos" role="tabpanel">
          <% @user.tasks.my.active.each do |task| %>
            <%= render partial: 'requests/request', locals: { request: task, task: true } %>
          <% end %>
          <% unless @user.tasks.my.active.any? %>
            <div class="text-dark card-body p-0 mb-2">
              <div class="card col bg-white rounded-0">
                <div class="rounded-0 row p-5">
                  CONGRATULATIONS!<br>All personal To-Do's removed
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="tab-pane fade" id="completedTodos" role="tabpanel">
          <% @user.tasks.completed.my.each do |task| %>
            <%= render partial: 'requests/request', locals: { request: task, task: true } %>
          <% end %>
          <% unless @user.tasks.my.completed.any? %>
            <div class="text-dark card-body p-0 mb-2">
              <div class="card col bg-white rounded-0">
                <div class="rounded-0 row p-5">
                  CONGRATULATIONS!<br>All personal To-Do's removed
                </div>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>

    <!-- RIGHT SIDEBAR -->
    <div class="d-none d-lg-inline col-md-3 pl-1 pr-2">
      <div id="profile_sidebar" class="sidebar sticky-top pt-2">
        <div class="card border border-warning">
          <div class="card-header p-2 p-md-3">
            <div class="card-title mb-sm-1">
              <%= @user.display_name %>
            </div>
          </div>
          <div class="p-2 p-lg-3">
            <div class="col-6 col-md-12 d-dm-block float-sm-left float-md-none px-0">
                <%= link_to new_request_path(:recipient_id => params[:id]), class: "rounded-0 btn text-success text-center text-md-left d-block" do %>
                  <%= icon('fas', 'plus') %><span class="ml-2"><%= current_user.is_self(@user) ? 'Create a task' : 'New Request' %></span>
                <% end %>
            </div>
            <div class="col-6 col-md-12 d-dm-block float-sm-left float-md-none px-0">
              <% if self_ %>
                <%= link_to edit_user_registration_path, class: 'rounded-0 btn text-success text-sm-center text-md-left d-block' do %>
                  <%= icon('fas', 'user-cog') %><span class="ml-2">Account Settings</span>
                <% end %>
              <% end %>
            </div>
            <div class="d-flex border-top pt-2 mt-2 w-100">
              <span class="small text-muted d-block"><i>Last logged in: <%= format_date(current_user.last_sign_in_at) + " at " + format_time(current_user.last_sign_in_at) %></i></span>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<div id="mobile_footer sticky_footer" class="d-block d-lg-none fixed-bottom text-center">
  <% recipient = self_ ? {} : {:recipient_id => params[:id]} %>
  <div class="btn-group w-100 bg-dark">

  <%= link_to root_path, class: 'd-flex flex-grow-1 text-light justify-content-center' do %>
    <div class="d-flex align-self-center d-block">
      <%= icon('fas', 'users') %>
    </div>
  <% end %>

  <%= link_to new_request_path(:recipient_id => current_user.id), class: "d-flex flex-grow-1 text-light justify-content-center" do %>
    <div class="small d-flex align-self-center d-block">
      <span class="fa-stack">
        <%= icon('fas', 'plus', class: 'fa-stack-1x') %>
        <%= icon('far', 'sticky-note', class: 'fa-stack-2x') %>
      </span>
    </div>
  <% end %>

  <%= link_to new_request_path(recipient), class: "text-dark rounded-0 px-0 btn-wrap py-0" do %>
  <div class="small flex-grow-1">
    <div class="btn-circle d-flex align-items-center justify-content-center bg-warning h3 mb-0">
      <span class="fa-stack fa-2x">
        <%= icon('fas', 'plus', class: 'fa-stack-1x') %>

      </span>
    </div>
  </div>
  <% end %>

  <%= link_to profiles_path(current_user), class: 'd-flex flex-grow-1 text-light justify-content-center' do %>
  <div class="small d-flex align-self-center d-block">
    <span class="fa-stack">
      <%= icon('fas', 'user', class: 'fa-stack-2x') %>
    </span>
  </div>
  <% end %>

  <%= link_to edit_user_registration_path, class: 'd-flex flex-grow-1 text-light justify-content-center' do %>
    <div class="d-flex align-self-center d-block">
      <span class="">
        <%= icon('fas', 'user-cog', class: '') %>
      </span>
    </div>
  <% end %>

  </div>
</div>
</div>
