<div class="col-sm-8 col-md-6 offset-sm-2 col-md-3 col-lg-4 offset-lg-4">
  <div class="rounded">
    <div class="text-center text-sm-left">
      <h2>Login</h2><p>Welcome back!</p>
    </div>
    <div class="p-2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group mb-1">
        <% email = resource.errors.messages.include? :email %>
        <%= f.label :email, class: "small #{ email ? 'text-danger':' '} "%>
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control #{ email ? 'border border-danger':' '} " %>
      </div>

      <div class="form-group mb-1">
        <% pw = resource.errors.messages.include? :password %>
        <%= f.label :password, class: "small #{ pw ? 'text-danger':' '} "%>
        <%= f.password_field :password, autocomplete: "off", class: "form-control #{ pw ? 'border border-danger':' '} " %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-check mb-1">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        </div>
      <% end -%>

      <div class="form-group my-3">
        <%= f.submit "Log in", class: 'btn btn-dark' %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
