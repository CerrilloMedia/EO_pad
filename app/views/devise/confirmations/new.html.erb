<div class="col-sm-8 col-md-6 offset-sm-2 offset-md-3 col-lg-4 offset-lg-4 mobile-expand pt-sm-4">
  <div class="">
    <div class="text-center text-sm-left">
      <h2>Resend confirmation instructions</h2>
    </div>
    <div class="p-1">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

        <div class="form-group mb-1">
          <% email = resource.errors.messages.include? :email %>
          <%= f.label :email, class: "small #{ email ? 'text-danger':' '} "%>
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control #{ email ? 'border border-danger':' '} " %>
        </div>

        <div class="form-group my-3">
          <%= f.submit "Resend confirmation instructions", class: 'btn btn-dark w-100' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
