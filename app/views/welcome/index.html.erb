<div class="container mt-1">
  <div class="row">
  <div class="card col col-sm-8 col-lg-9 px-0 mt-1">

    <div class="card-body p-0 p-sm-2">
      <% if @users %>
      <div class="d-flex flex-wrap">
        <% @users.each do |u| %>
            <div class= 'col-6 col-sm-6 col-lg-3 p-2 dashboard-link'>
              <%= link_to profiles_path(u), class: 'btn btn-outline-secondary w-100 user-profile-card border-0' do %>
                <div class="d-flex position-relative flex-wrap align-items-stretch">
                    <div class="d-flex align-items-center mb-0 text-center">
                      <div class="rounded-circle border border-warning">
                        <span class="fa-stack fa-2x">
                          <%= icon('fas','user', class: 'fa-stack-1x')%>
                        </span>
                      </div>
                    </div>
                    <div class="col align-items-center p-0 pl-2">
                      <div class="text-left">
                        <span class='d-flex'><%= u.display_name %></span>
                        <span class="badge badge-success d-inline"><%= u.tasks.completed.count %> / <%= u.tasks.count %> </span>
                      </div>
                    </div>
                </div>
              <% end %>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="right-sidebar d-none d-sm-block d-md-inline col-sm-4 col-lg-3 px-1">
    <div id="profile_sidebar" class="sidebar sticky-top pt-1">
      <div class="card border border-warning">
        <div class="card-header p-2 p-md-3">
          <div class="card-title mb-sm-1">
            <%= @user.display_name %>
          </div>
        </div>
        <div class="p-1 p-md-2 p-lg-3">
          <div class="col-12 d-dm-block px-0">
              <%= link_to new_request_path(:recipient_id => params[:id]), class: "rounded-0 btn text-success text-left d-block w-100 px-1" do %>
                <%= icon('fas', 'plus') %><span class="ml-2"><%= current_user.is_self(@user) ? 'Create a task' : 'Send a request' %></span>
              <% end %>
          </div>
          <div class="col-12 d-dm-block px-0">
            <% if current_user %>
              <%= link_to edit_user_registration_path, class: 'rounded-0 btn text-success text-left d-block w-100 px-1' do %>
                <%= icon('fas', 'user-cog') %><span class="ml-2">Account Settings</span>
              <% end %>
            <% end %>
          </div>
          <div class="d-flex border-top pt-2 mt-2 w-100">
            <span class="small text-muted d-block"><i>Last logged in: <%= format_date(current_user.last_sign_in_at) + " at " + format_time(current_user.last_sign_in_at) %></i></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div id="sticky_footer" class="d-block d-sm-none fixed-bottom text-center">

    <div class="btn-group w-100">

    <%= link_to new_request_path(:recipient_id => current_user.id), class: "btn flex-grow-1 bg-dark text-light rounded-0 border-dark px-0 btn-wrap py-2" do %>
      <div class="small flex-grow-1">
        <span class="fa-stack">
          <%= icon('fas', 'plus', class: 'fa-stack-1x') %>
          <%= icon('far', 'sticky-note', class: 'fa-stack-2x') %>
        </span>
      </div>
    <% end %>

    <%= link_to profiles_path(current_user), class: 'btn flex-grow-1 text-dark bg-warning rounded-0 border-dark px-0 btn-wrap py-2' do %>
    <div class="small flex-grow-1">
      <span class="fa-stack">
        <%= icon('fas', 'user', class: 'fa-stack-2x') %>
      </span>
    </div>
    <% end %>

    <%= link_to edit_user_registration_path, class: 'btn flex-grow-1 bg-dark text-light rounded-0 border-dark px-0 btn-wrap py-2' do %>
      <div class="">
        <span class="">
          <%= icon('fas', 'user-cog', class: '') %>
        </span>
      </div>
    <% end %>

    </div>
  </div>
</div>
