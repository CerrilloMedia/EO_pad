
<div class="">
  <div class="card">
    <div class="card-header bg-warning">
      <h3 class="p-0">Team Dashbard</h2>
    </div>
    <div class="card-body p-0 p-sm-2">
      <% if @users %>
      <div class="d-flex flex-wrap">
        <% @users.each do |u| %>
            <div class= 'col-12 col-sm-6 col-md-4 col-lg-3 p-2 dashboard-link'>
              <%= link_to profiles_path(u), class: 'btn btn-outline-secondary w-100' do %>
                <div class="d-flex position-relative flex-wrap align-items-stretch">
                    <div class="d-flex align-items-center mb-0 text-center">
                      <div class="rounded-circle border border-warning">
                        <span class="fa-stack fa-2x">
                          <%= icon('fas','user', class: 'fa-stack-1x')%>
                        </span>
                      </div>
                    </div>
                    <div class="col align-items-center p-0 pl-2">
                      <div class="text-left">
                        <span class='d-flex'><%= u.display_name %></span>
                        <span class="badge badge-success d-inline"><%= u.tasks.completed.count %> / <%= u.tasks.count %> </span>
                      </div>
                    </div>
                </div>
              <% end %>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
