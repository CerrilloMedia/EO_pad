<!DOCTYPE html>
<html>
  <head>
    <title>ExploringOptions</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="container">
        <ul class="nav justify-content-end">
          <li class="nav-item m-1">
            <span class="nav-link">Exploring Options</span>
          </li>
          <li class="nav-item m-1">
            <%= link_to "HOME", root_path, class: "btn btn-outline-light" %>
          </li>
          <li class="nav-item m-1">
            <%= link_to new_request_path, class: "btn btn-light" do %>
              New
            <% end %>
          </li>
        </ul>
    </div>
    <div class="container p-1">
      <!-- flash messages container -->
    <% if flash %>
      <% flash.each do |name,msg| %>
        <%= content_tag :div, msg, class: [:alert, alert_for(name)] %>
      <% end %>
    <% end %>

      <%= yield %>
    </div>
  </body>
</html>
